<!-- res/drawable/edit_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State (Ripple Effect) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#81C784" /> <!-- Lighter shade for pressed state -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#388E3C" /> <!-- Border -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4CAF50"
                android:endColor="#388E3C"
                android:angle="90" /> <!-- Gradient background -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#1B5E20" /> <!-- Border -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>